<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddThoughtFragment">

    <EditText
        android:id="@+id/edit_text_new_thought"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_md"
        android:gravity="start|top"
        android:hint="New Thought"
        app:layout_constraintBottom_toTopOf="@+id/button_save_thought"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="This is a random thought, lets see how this thing looks as a long piece of text. This is a random thought, lets see how this thing looks as a long piece of text. This is a random thought, lets see how this thing looks as a long piece of text. This is a random thought, lets see how this thing looks as a long piece of text. This is a random thought, lets see how this thing looks as a long piece of text." />

    <Button
        android:id="@+id/button_save_thought"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_md"
        android:text="Save Thought"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>